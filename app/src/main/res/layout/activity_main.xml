<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/book"
            app:layout_constraintBottom_toBottomOf="@+id/quantity_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="14dp"
            android:text="@string/Nguyen_ham_tich_phan_va_ung_dung"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/manufacture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="42dp"
            android:text="@string/Cung_cap_boi_Tiki_Trading"
            android:textColor="@color/black"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/priceSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="67dp"
            android:text="@string/_141_800_vnd"
            android:textColor="@color/red"

            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="99dp"
            android:background="@drawable/striking_text"
            android:text="@string/_141_800_vnd"
            android:textColor="@color/grey"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/quantity_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"

            android:layout_marginTop="124dp"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/btnSub"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:src="@drawable/minus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"


                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:text="1"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:src="@drawable/addition" />

        </LinearLayout>

        <TextView
            android:id="@+id/label_maGiamGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="12dp"
            android:layout_marginTop="21dp"
            android:text="Mã giảm giá đã lưu"
            android:textColor="@color/black"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book"

            />

        <TextView
            android:id="@+id/label_xemTaiDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="136dp"
            android:layout_marginTop="21dp"
            android:text="Xem tại đây"
            android:textColor="@color/blue"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quantity_product"

            />

        <ImageView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"


            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/book"
            app:layout_constraintBottom_toBottomOf="@+id/quantity_product"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="14dp"
            android:text="@string/Nguyen_ham_tich_phan_va_ung_dung"

            android:textColor="@color/black"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/manufacture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="42dp"
            android:text="@string/Cung_cap_boi_Tiki_Trading"
            android:textColor="@color/black"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/priceSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="67dp"
            android:text="@string/_141_800_vnd"
            android:textColor="@color/red"

            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="99dp"
            android:background="@drawable/striking_text"
            android:text="@string/_141_800_vnd"
            android:textColor="@color/grey"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/quantity_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"

            android:layout_marginTop="124dp"

            app:layout_constraintLeft_toRightOf="@+id/book"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/btnSub"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:src="@drawable/minus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"


                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:text="1"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:src="@drawable/addition" />

        </LinearLayout>

        <TextView
            android:id="@+id/label_maGiamGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="12dp"
            android:layout_marginTop="21dp"
            android:text="Mã giảm giá đã lưu"
            android:textColor="@color/black"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book"

            />

        <TextView
            android:id="@+id/label_xemTaiDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="136dp"
            android:layout_marginTop="21dp"
            android:text="Xem tại đây"
            android:textColor="@color/blue"

            android:textSize="12sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quantity_product"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="16dp" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf=""
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="16dp" >

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
